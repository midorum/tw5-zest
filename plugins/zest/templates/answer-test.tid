title: $:/plugins/midorum/zest/templates/answer-test
type: text/vnd.tiddlywiki
tags: $:/srs/tags/forwardAnswerCard
srs-current-type: $:/zest/tags/thesis
zest-question-type: test

\whitespace trim
\parameters (
    src,
    random,
    hitStatus
)
<p>
    <$list filter="[<hitStatus>compare:string:eq[hit]]" >
        <div style="color: lime;" >
            Well done! That was a solid grasp of the following categories:
        </div>
    </$list>
    <$list filter="[<hitStatus>!compare:string:eq[hit]]" >
        <div style="color: red;" >
            Solid try! Pay extra attention to the following categories:
        </div>
    </$list>
</p>
<p>
    <$transclude $tiddler="$:/plugins/midorum/zest/templates/tag-pane"
        qualifier=<<src>>
        tagFilter="[<src>tags[]tag[$:/zest/tags/category]]"
        tagDisplayFieldName="text"
        removeTagButton="false"
        addTagButton="false"
        isClickable="true"
    >
        <$fill $name="click-tag-action">
            <$transclude $tiddler="$:/plugins/midorum/zest/templates/navigate-to-category" ref=<<tag-ref>> />
        </$fill>
    </$transclude>
</p>
<p>
    <$transclude $tiddler=<<src>> $field="note" $mode="block"/>
</p>